<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFFFFF">


    <!-- MYAPP by YL & SL -->
    <!--
      Font family: Inter
      Line height: 42sp
      (identical to box height)
      translationY compensates for the line height adjustment of text
      -->


    <!-- Auto layout, variables, and unit scale are not yet supported -->

    <TextView
        android:id="@+id/myapp_by_yl"
        android:layout_width="264dp"
        android:layout_height="42dp"
        android:gravity="center"
        android:lineSpacingExtra="6sp"
        android:text="@string/myapp_by_yl"
        android:textAppearance="@style/myapp_by_yl"
        android:translationY="-2.85sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/rectangle_2"
        android:layout_width="170dp"
        android:layout_height="136dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/rectangle_2"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="110dp"
        />

    <View
        android:id="@+id/rectangle_3"
        android:layout_width="168dp"
        android:layout_height="136dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/rectangle_3"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="227dp"
        tools:layout_editor_absoluteY="110dp" />

    <View
        android:id="@+id/rectangle_4"
        android:layout_width="371dp"
        android:layout_height="278dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/rectangle_4"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="280dp" />


    <TextView
        android:id="@+id/coming_soon"
        android:layout_width="215dp"
        android:layout_height="42dp"
        android:gravity="top"
        android:lineSpacingExtra="6sp"
        android:text="@string/coming_soon"
        android:textAppearance="@style/coming_soon"
        android:translationY="-2.85sp"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="450dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/contactsbutton"
        android:layout_width="168dp"
        android:layout_height="136dp"
        android:text="Contacts"
        android:textSize="22sp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@null"
        android:layout_marginTop="120dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/gallerybutton"
        android:layout_width="168dp"
        android:layout_height="136dp"
        android:text="Gallery"
        android:textSize="22sp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@null"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>