<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- ProgressBar의 배경 -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp" /> <!-- 모서리를 둥글게 설정 -->
            <solid android:color="#E0E0E0" /> <!-- 배경색: 연한 회색 -->
        </shape>
    </item>

    <!-- 진행 중인 영역 -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="12dp" /> <!-- 진행 영역도 모서리 둥글게 -->
                <solid android:color="#4CAF50" /> <!-- 진행 색상: 초록색 -->
            </shape>
        </clip>
    </item>

</layer-list>
